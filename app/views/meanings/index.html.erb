<p id="notice"><%= notice %></p>

<h1>Meanings</h1>

<table>
  <thead>
    <tr>
      <th>Interaction</th>
      <th>Meaning</th>
      <th>Creator</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meanings.each do |meaning| %>
      <tr>
        <td><%= meaning.interaction.word %></td>
        <td><%= meaning.meaning %></td>
        <td><%= meaning.creator %></td>
        <td><%= link_to 'Show', meaning %></td>
        <td><%= link_to 'Edit', edit_meaning_path(meaning) %></td>
        <td><%= link_to 'Destroy', meaning, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Meaning', new_meaning_path %>
